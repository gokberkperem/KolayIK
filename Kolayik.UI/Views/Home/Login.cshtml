
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center p-4">Şirket Giriş Sayfası</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form method="post">
            <div class="form-group">
                <label> Email </label>
                <input type="email" placeholder="Emailinizi Giriniz" class="form-control">
            </div>
            <div class="form-group">
                <label> Parola </label>
                <input type="password" placeholder="Şifrenizi Giriniz" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
    </div>
</div>

