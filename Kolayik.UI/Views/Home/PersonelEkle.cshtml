@model PersonelRegisterViewModel
@{
    ViewData["Title"] = "PersonelEkle";
}

<h1>Personel Kayıt Sayfası</h1>

<div class="row p-4">
    <div class="col-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label"></label>
                <input asp-for="Ad" class="form-control" placeholder="Personel Adını Giriniz" />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Soyad" class="form-label"></label>
                <input asp-for="Soyad" class="form-control" placeholder="Personel Soyadını Giriniz" />
                <span asp-validation-for="Soyad" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Personel Emailini Giriniz" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label"></label>
                <input asp-for="Telefon" class="form-control" placeholder="Personel Telefonunu Giriniz" />
                <span asp-validation-for="Telefon" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IseAlimTarihi" class="form-label"></label>
                <input asp-for="IseAlimTarihi" class="form-control" placeholder="Personelin İşe Başlama Tarihini Giriniz" />
                <span asp-validation-for="IseAlimTarihi" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DogumTarihi" class="form-label"></label>
                <input asp-for="DogumTarihi" class="form-control" placeholder="Personelin Doğum Tarihini Giriniz" />
                <span asp-validation-for="DogumTarihi" class="text-danger small"></span>
            </div>
            <div class="">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-2"></i>Kaydet</button>
                <a class="btn btn-secondary" asp-action="SirketAnasayfasi"><i class="fas fa-arrow-left mr-2"></i>Listeye Dön!</a>
            </div>
        </form>
    </div>
</div>

