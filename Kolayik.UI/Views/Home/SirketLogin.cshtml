@model SirketLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center p-4">Şirket Giriş Sayfası</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" aut class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Parola"></label>
                <input asp-for="Parola" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
    </div>
</div>

