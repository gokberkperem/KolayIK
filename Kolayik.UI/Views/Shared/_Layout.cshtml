@{
    string username = ViewContext.HttpContext.Session.GetString(Constants.SessionUsername);
    string userRole = ViewContext.HttpContext.Session.GetString(Constants.SessionUserRole);
    bool isUserLogin = string.IsNullOrEmpty(username) ? false : true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kolayik - Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/style.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Overpass:100,100i,200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    
    <!-- FontAwesome CSS -->
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <!-- OwlCarosuel CSS -->
    <link href="~/css/owl.carousel.css" type="text/css" rel="stylesheet">
    <link href="~/css/owl.theme.default.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/fontello.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kolayik.UI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (isUserLogin == false)
                        {
                            <li class="nav-item rounded-circle">
                                <a class="btn btn-outline-info rounded p-2 mr-3" asp-area="" asp-controller="Home" asp-action="Register">Kayıt Ol</a>
                            </li>
                            <li class="nav-item rounded-circle">
                                <a class="btn btn-outline-info rounded p-2" asp-area="" asp-controller="Home" asp-action="Login">Giriş</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user mr-2"></i>@username
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="ShowProfile" asp-controller="Home"><i class="fas fa-eye me-2"></i>Profil Göster</a></li>
                                    <li><a class="dropdown-item" asp-action="EditProfile" asp-controller="Home"><i class="fas fa-user-edit me-2"></i>Profil Düzenle</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-action="DeleteProfile" asp-controller="Home"><i class="fas fa-trash me-2"></i>Profil Sil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-action="SignOut" asp-controller="Home"><i class="fas fa-sign-out-alt me-2"></i>Çıkış</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-1 border-top footer text-muted">
        <div class="container">
            <div class="row ">

                <div class="col-xl-4">
                    <h4 class="text-white">Ürün</h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Personel</a></li>
                        <li><a href="#">Performans</a></li>
                        <li><a href="#">Vardiya</a></li>
                        <li><a href="#">ÜcretDeğerlendirme</a></li>
                        <li><a href="#">Fiyatlar</a></li>
                    </ul>
                </div>
                <div class="col-xl-4">
                    <h4 class="text-white">Kaynaklar</h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Destek</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">E-Kitaplar</a></li>
                        <li><a href="#">Webinarlar</a></li>
                        <li><a href="#">İKütüphane</a></li>
                        <li><a href="#">Dijital Köprü</a></li>
                    </ul>
                </div>
                <div class="col-xl-4">
                    <h4 class="text-white">İletişim</h4>
                    <p>
                        Quick Tower, İçerenköy Mah. Umut Sok.<br />
                        No:10/12 Kat:18 İç Kapı No: 70<br />
                        Ataşehir 34752 İstanbul
                        <br>
                        <br><span class="text-white">+90 212 951 06 61</span>
                    </p>
                </div>
                <!-- /.footer-contact -->
                <!-- tiny-footer -->
            </div>
            <div class="row ">
                <div class="m-3 col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                    &copy; 2022 - KolayikDemo | İnsan Kaynakları Yönetim Platformu - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
            <!-- /. tiny-footer -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
